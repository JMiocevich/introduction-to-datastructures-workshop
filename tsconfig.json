{
    "compilerOptions": {
        "target": "es2020",
        "module": "ES2022",
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "verbatimModuleSyntax": true,
        "moduleResolution": "node",
        "noImplicitAny": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}